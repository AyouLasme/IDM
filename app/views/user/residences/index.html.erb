<div class="residences-container">
  <% @residences.each do |residence| %>
    <div class="residence-card">
      <div class="residence-images">
        <% if residence.images.attached? %>
          <% residence.images.each do |image| %>
            <%= image_tag image, alt: residence.nom_de_la_residence, class: "residence-image" %>
          <% end %>
        <% else %>
          <div class="no-image">
            <p>Aucune image disponible</p>
          </div>
        <% end %>
      </div>
      <div class="residence-content">
        <h2 class="residence-title">
          <%= link_to residence.nom_de_la_residence, user_residence_path(residence), class: "residence-link" %>
        </h2>
        <p class="residence-address"><%= residence.adresse %></p>
        <p class="residence-description"><%= residence.description %></p>
      </div>
    </div>
  <% end %>
</div>